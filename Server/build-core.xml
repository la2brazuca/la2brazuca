<?xml version="1.0" encoding="UTF-8"?>
<project name="L2Frozen-Core" default="dist" basedir=".">
	<property name="src" location="java" />
	<property name="lib" location="lib" />
	<property name="build" location="build-core" />
	<property name="build.classes" location="${build}/classes" />

	<path id="classpath">
		<fileset dir="${lib}">
			<include name="*.jar" />
		</fileset>
	</path>

	<target name="dist">
		<delete dir="${build}"/>
		<mkdir dir="${build}" />
		<mkdir dir="${build.classes}" />
		<javac destdir="${build.classes}"
               optimize="on"
               debug="on"
               source="1.5"
               target="1.5"
			   encoding="UTF-8"
               nowarn="off">
			<src path="${src}"/>
			<classpath refid="classpath"/>
		</javac>
       
		<jar destfile="${build}/l2open-game.jar">
			<fileset dir="${build.classes}" >
				<exclude name="**/accountmanager/**"/>
				<exclude name="**/gsregistering/**"/>
			</fileset>
		</jar>
		<jar destfile="${build}/l2open-login.jar">
			<fileset dir="${build.classes}" >
				<exclude name="**/gameserver/ai/"/>
				<exclude name="**/gameserver/ai2/"/>
				<exclude name="**/gameserver/cache/"/>
				<exclude name="**/gameserver/geo/"/>
				<exclude name="**/gameserver/communitybbs/"/>
				<exclude name="**/gameserver/instancemanager/"/>
				<exclude name="**/gameserver/skills/"/>
				<exclude name="**/gameserver/taskmanager/"/>
				<exclude name="**/gameserver/templates/"/>
			</fileset>
		</jar>
		<delete dir="${build.classes}"/>
	</target>

	<target name="clean" description="Remove the output directories">
		<delete dir="${build}" />
	</target>
</project>