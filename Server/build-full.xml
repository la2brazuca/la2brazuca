<?xml version="1.0" encoding="UTF-8"?>
<project name="L2Frozen Full" default="dist" basedir=".">
	<property name="src" location="java" />
	<property name="lib" location="lib" />
	<property name="build" location="build-full" />
	<property name="build.classes" location="${build}/classes" />
	<property name="build.dist" location="${build}/dist" />
	<property name="build.dist.install" location="${build.dist}/install" />
	<property name="build.dist.login" location="${build.dist}/login" />
	<property name="build.dist.game" location="${build.dist}/game" />
	<property name="build.dist.glibs" location="${build.dist.game}/libs" />
	<property name="build.dist.llibs" location="${build.dist.login}/libs" />
	<property name="build.dist.sql" location="${build.dist}/sql" />
	<property name="properties-file" location="${build.dist.game}/config/L2Open-version.ini" />

    <path id="classpath">
        <fileset dir="${lib}">
			<include name="*.jar"/>
        </fileset>
    </path>   

	<target name="verifyRequirements" description="Checks if the necessary requirements for building L2J are fulfilled">
		<available classname="javax.script.ScriptContext" property="JDK6.present" />
		<fail unless="JDK6.present" message="JDK 6 or greater is required." />
	</target>

	<target name="init" depends="clean, verifyRequirements" description="Create the output directories.">
		<mkdir dir="${build}" />
		<mkdir dir="${build.classes}" />
		<mkdir dir="${build.dist}" />
		<mkdir dir="${build.dist.install}" />
		<mkdir dir="${build.dist.login}" />
		<mkdir dir="${build.dist.game}" />
		<mkdir dir="${build.dist.sql}" />
	</target>

	<target name="compile" depends="version" description="Compile the source.">
		<javac destdir="${build.classes}" optimize="on" debug="on" source="1.6" target="1.6" encoding="UTF-8" nowarn="off">
			<src path="${src}" />
			<classpath refid="classpath" />
		</javac>
	</target>

	<target name="jar" depends="compile" description="Create the jar file">
		<jar destfile="${build}/l2open-game.jar">
			<fileset dir="${build.classes}" >
				<exclude name="**/accountmanager/**"/>
				<exclude name="**/gsregistering/**"/>
			</fileset>
		</jar>
		<jar destfile="${build}/l2open-login.jar">
			<fileset dir="${build.classes}" >
				<exclude name="**/gameserver/ai/"/>
				<exclude name="**/gameserver/ai2/"/>
				<exclude name="**/gameserver/cache/"/>
				<exclude name="**/gameserver/communitybbs/"/>
				<exclude name="**/gameserver/instancemanager/"/>
				<exclude name="**/gameserver/skills/"/>
				<exclude name="**/gameserver/taskmanager/"/>
				<exclude name="**/gameserver/templates/"/>
			</fileset>
		</jar>
		<copy todir="${build.dist.login}/libs">
			<fileset dir="${build}">
				<include name="l2open-login.jar" />
			</fileset>
		</copy>
		<copy todir="${build.dist.game}/libs">
			<fileset dir="${build}">
				<include name="l2open-game.jar" />
			</fileset>
		</copy>
	</target>

	<target name="dist" depends="jar">
		<copy todir="${build.dist.game}/data">
			<fileset dir="${basedir}/data">
				<exclude name=".project" />
				<exclude name="log/**" />
				<exclude name="cachedir/**" />
				<exclude name="clans/**" />
				<exclude name="crests/**" />
				<exclude name="**.svn**" />
				<exclude name="**/*.class" />
				<exclude name="**/*.jar" />
			</fileset>
		</copy>		
		<copy todir="${build.dist.login}">
			<fileset dir="${src}">
				<include name="log.cfg" />
				<include name="banned_ip.cfg" />
				<include name="console.cfg" />
			</fileset>
		</copy>
		<copy todir="${build.dist.game}">
			<fileset dir="${src}">
				<include name="log.cfg" />
				<include name="console.cfg" />
			</fileset>
		</copy>
		<copy todir="${build.dist.sql}">
			<fileset dir="${basedir}/sql">
			</fileset>
		</copy>
		<copy todir="${build.dist.install}">
			<fileset dir="${basedir}/install">
				<exclude name="database_installer.rc" />
				<exclude name="*.txt" />
				<exclude name="*.log" />
				<exclude name="*backup.sql" />
			</fileset>
		</copy>
    	<copy todir="${build.dist.llibs}">
			<fileset dir="${src}/../lib">
				<include name="c3p0-0.9.1.2.jar"/>
				<include name="mysql-connector-java-5.1.6-bin.jar"/>
				<include name="javolution.jar"/>
			</fileset>
		</copy>
    	
	   	<copy todir="${build.dist.glibs}">
			<fileset dir="${src}/../lib">
				<include name="*.jar"/>
			</fileset>
		</copy>
		<copy todir="${build.dist.login}">
			<fileset dir="dist">
				<include name="startAccountManager.*" />
				<include name="startSQLAccountManager.*" />
				<include name="LoginServer_loop.sh" />
				<include name="startLoginServer.*" />
				<include name="RegisterGameServer.*" />
			</fileset>
		</copy>
		<copy todir="${build.dist.game}">
			<fileset dir="dist">
				<include name="GameServer_loop.sh" />
				<include name="startGameServer.*" />
				<include name="hibernate.cfg.xml" />
			</fileset>
		</copy>
		
		<copy todir="${build.dist}">
            <fileset dir="dist">
                <include name="Start_*.sh"/>
            </fileset>
        </copy>
		
		<fixcrlf srcdir="${build.dist.game}" eol="lf" eof="remove" includes="**/*.sh" />
		<fixcrlf srcdir="${build.dist.login}" eol="lf" eof="remove" includes="**/*.sh" />
		<fixcrlf srcdir="${build.dist.game}" eol="crlf" eof="remove" includes="**/*.bat" />
		<fixcrlf srcdir="${build.dist.login}" eol="crlf" eof="remove" includes="**/*.bat" />
		<mkdir dir="${build.dist.game}/log" />
		<mkdir dir="${build.dist.login}/log" />
        <mkdir dir="${build.dist.game}/config" />
    	<mkdir dir="${build.dist.login}/config" />
    	<copy todir="${build.dist.game}/config">
			<fileset dir="java/config">
				<include name="**/**"/>
				<exclude name="system/LoginServer.ini" />
			</fileset>
        </copy>
    	<copy todir="${build.dist.login}/config/system">
			<fileset dir="java/config/system">
				<include name="LoginServer.ini"/>
				<include name="MMO.ini"/>
				<include name="Telnet.ini"/>
			</fileset>
        </copy>
		<copy todir="${build.dist.login}">
			<fileset dir="${build.dist.game}/data">
				<include name="servername.xml" />
			</fileset>
		</copy>

	</target>

	<target name="version" 
		depends="init"
		description="Create L2Open-version.ini file">
		
    	<tstamp>
    	  <format property="build.tstamp"
    	              pattern="yyyyMMdd_HHmm"/>
    	</tstamp>


    	<exec dir="." executable="svnversion" outputproperty="L2Open-GS.revision"
			  failifexecutionfails="false">
    	  <arg line="-n ."/>
    	</exec>
    	
    	<concat destfile="${build.dist.game}/config/L2Open-version.ini">
    	version=${L2Open-GS.revision}
    	builddate=${build.tstamp} 
      detailed info:
	</concat>
      <concat destfile="${build.dist.game}/config/L2Open-version.ini" append="true">
        <filelist dir="${src}/../.svn/" files="entries"/>
        <filterchain>
          <prefixlines prefix="          "/>
          <headfilter lines="8" skip="4"/>
          <tokenfilter>
             <ignoreblank/>
          </tokenfilter>
        </filterchain>
		</concat>
	</target>

	<target name="clean" description="Remove the output directories">
		<delete dir="${build}" />
	</target>
	
	<target name="zip" description="Zip Dist Folder" depends="dist">
		<zip destfile="${build}/SERVER.zip" basedir="${build.dist}" />
	</target>
	
</project>